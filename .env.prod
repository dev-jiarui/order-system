# 环境配置
NODE_ENV=prod

# MongoDB连接信息 - 生产环境
MONGODB_URI=mongodb://mongo:27017/order_system_prod

# MongoDB连接池配置 - 生产环境优化
MONGODB_MAX_POOL_SIZE=50
MONGODB_SERVER_SELECTION_TIMEOUT=15000
MONGODB_SOCKET_TIMEOUT=120000

# 服务配置
PORT=3000

# 华为云FunctionGraph配置
FUNCTIONGRAPH_REGION=cn-north-4
FUNCTIONGRAPH_ACCESS_KEY=${FUNCTIONGRAPH_ACCESS_KEY_PROD}
FUNCTIONGRAPH_SECRET_KEY=${FUNCTIONGRAPH_SECRET_KEY_PROD}

# JWT配置
JWT_SECRET=${JWT_SECRET_PROD}

# Docker Compose 配置
COMPOSE_PROJECT_NAME=order-system-prod
IMAGE_NAME=order-system
IMAGE_TAG=latest
CONTAINER_NAME=order-system-prod
APP_PORT=3000

# MongoDB Docker 配置
MONGO_INITDB_DATABASE=order_system_prod
MONGO_CONTAINER_NAME=mongo-prod
MONGO_PORT=27017
MONGO_VERSION=6.0
MONGO_ROOT_USERNAME=${MONGO_ROOT_USERNAME}
MONGO_ROOT_PASSWORD=${MONGO_ROOT_PASSWORD}

# 资源限制 - 生产环境
CPU_LIMIT=2.0
MEMORY_LIMIT=1G
CPU_RESERVATION=0.5
MEMORY_RESERVATION=512M

MONGO_CPU_LIMIT=2.0
MONGO_MEMORY_LIMIT=2G
MONGO_CPU_RESERVATION=1.0
MONGO_MEMORY_RESERVATION=1G

# 健康检查配置
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=40s

# Nginx配置
NGINX_VERSION=alpine
NGINX_CONTAINER_NAME=nginx-prod
HTTP_PORT=80
HTTPS_PORT=443
NGINX_CONFIG_PATH=./nginx/nginx.conf
SSL_CERT_PATH=./nginx/ssl

# 路径配置
LOG_PATH=./logs
BACKUP_PATH=./backups