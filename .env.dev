# 环境配置
NODE_ENV=dev

# MongoDB连接信息
MONGODB_URI=mongodb://mongo:27017/order_system_dev

# MongoDB连接池配置
MONGODB_MAX_POOL_SIZE=5
MONGODB_SERVER_SELECTION_TIMEOUT=5000
MONGODB_SOCKET_TIMEOUT=30000

# 服务配置
PORT=3000

# 华为云FunctionGraph配置
FUNCTIONGRAPH_REGION=cn-north-4
FUNCTIONGRAPH_ACCESS_KEY=dev_access_key
FUNCTIONGRAPH_SECRET_KEY=dev_secret_key

# JWT配置
JWT_SECRET=your-secure-jwt-secret-key-for-development-only-change-in-production

# Docker Compose 配置
COMPOSE_PROJECT_NAME=order-system-dev
IMAGE_NAME=order-system
IMAGE_TAG=latest
CONTAINER_NAME=order-system-dev
APP_PORT=3000

# MongoDB Docker 配置
MONGO_INITDB_DATABASE=order_system_dev
MONGO_CONTAINER_NAME=mongo-dev
MONGO_PORT=27017
MONGO_VERSION=6.0

# 资源限制 - 开发环境
CPU_LIMIT=0.5
MEMORY_LIMIT=256M
CPU_RESERVATION=0.1
MEMORY_RESERVATION=128M

MONGO_CPU_LIMIT=0.5
MONGO_MEMORY_LIMIT=512M
MONGO_CPU_RESERVATION=0.25
MONGO_MEMORY_RESERVATION=256M

# 健康检查配置
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=5s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=30s

# 路径配置
LOG_PATH=./logs
BACKUP_PATH=./backups