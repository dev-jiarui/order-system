# 环境配置
NODE_ENV=uat

# MongoDB连接信息
MONGODB_URI=mongodb://mongo:27017/order_system_uat

# MongoDB连接池配置
MONGODB_MAX_POOL_SIZE=10
MONGODB_SERVER_SELECTION_TIMEOUT=8000
MONGODB_SOCKET_TIMEOUT=60000

# 服务配置
PORT=3000

# 华为云FunctionGraph配置
FUNCTIONGRAPH_REGION=cn-north-4
FUNCTIONGRAPH_ACCESS_KEY=uat_access_key
FUNCTIONGRAPH_SECRET_KEY=uat_secret_key

# JWT配置
JWT_SECRET=test-jwt-secret-key-for-uat-environment

# Docker Compose 配置
COMPOSE_PROJECT_NAME=order-system-uat
IMAGE_NAME=order-system
IMAGE_TAG=latest
CONTAINER_NAME=order-system-uat
APP_PORT=3001

# MongoDB Docker 配置
MONGO_INITDB_DATABASE=order_system_uat
MONGO_CONTAINER_NAME=mongo-uat
MONGO_PORT=27018
MONGO_VERSION=6.0

# 资源限制 - 测试环境
CPU_LIMIT=1.0
MEMORY_LIMIT=512M
CPU_RESERVATION=0.25
MEMORY_RESERVATION=256M

MONGO_CPU_LIMIT=1.0
MONGO_MEMORY_LIMIT=1G
MONGO_CPU_RESERVATION=0.5
MONGO_MEMORY_RESERVATION=512M

# 健康检查配置
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=8s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=35s

# 路径配置
LOG_PATH=./logs
BACKUP_PATH=./backups